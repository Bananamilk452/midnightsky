generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PublicPost {
  id             String   @id @default(uuid(7))
  blueskyContent String
  content        String
  authorDid      String
  rkey           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("public_posts")
}

model PrivatePost {
  id               String   @id @default(uuid(7))
  blueskyContent   String
  encryptedContent String
  iv               String
  authorDid        String
  rkey             String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("private_posts")
}

model ListPost {
  id               String   @id @default(uuid(7))
  blueskyContent   String
  encryptedContent String
  iv               String
  authorDid        String
  rkey             String
  listId           String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("list_posts")
}

model AuthState {
  key   String @id
  state String

  @@map("auth_states")
}

model AuthSession {
  key     String @id
  session String

  @@map("auth_sessions")
}
